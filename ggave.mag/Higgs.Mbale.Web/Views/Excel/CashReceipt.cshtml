               @* </a>*@

                <div id="legalcopy">
                    <p class="legal">
                        <strong>
                            Receipt No. @ViewBag.documentPdf.DocumentNumber
                        </strong>
                    </p>
                </div>
                   
</div>
            <div id="legalcopy">
                <p class="legal">
                    <strong>
                       Date : @ViewBag.documentPdf.CreatedOn
                    </strong>
                </p>
            </div>
            <div id="legalcopy">
                <p class="legal">
                    <strong>
                        Description : @ViewBag.documentPdf.Description
                    </strong>
                </p>
            </div>
          
         
            <div id="bot">

                <div id="table">
                    @if (@ViewBag.documentPdf.Grades != null)
                       {

                        foreach (var item in @ViewBag.documentPdf.Grades)
                        {
                    <p>Grade : @item.Value</p>
                        <table>
                            <tr class="tabletitle">
                                <td class="item"><h1>Value</h1></td>
                                <td class="item"><h1>Bags</h1></td>
                                <td class="item"><h1>Price</h1></td>
                                <td class="item"><h1>Amount</h1></td>
                            </tr>
                        </table>
                            foreach (var x in @item.Denominations)
                            {
                    <table>
                        <tr class="service">
                        <tr class="tabletitle">
                            @if (@x.Value > 0 && @x.Quantity >0 && @x.Price > 0 && @x.Amount > 0)
                            {
                            <td  class="item"><h1>@x.Value</h1></td>
                            <td class="item"><h1>@x.Quantity</h1></td>
                            <td class="item"><h1 >@x.Price</h1></td>
                            <td class="item"><h1>@x.Amount</h1></td>
                            }
                           
                        </tr>
                      
                    </table>
                            }

                        }

                       }

                    <table>
                    </table>
                </div><!--End Table-->
                <div id="legalcopy">
                    <p class="legal">
                        <strong>
                            Amount Received : @ViewBag.documentPdf.Amount shs.
                        </strong>
                    </p>
                </div>
                <div id="legalcopy">
                    <p class="legal">
                        <strong>Cashier : @ViewBag.documentPdf.UserId</strong>
                    </p>
                </div>
               

