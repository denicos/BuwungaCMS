@model Higgs.Mbale.Web.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset Password";
    Layout = "/views/shared/_LayoutMvc.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="login col-sm-12">
                <div class="text-center m-b-md">
                    <img width="300" src="/images/mbale_logo.jpg" alt="Mbale Logo" />
                    <div class="clear5"></div>
                    <h3>RESET PASSWORD</h3>
                </div>
                <div class="clear20"></div>

                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        <div class="col-md-11">
                            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="clear5"></div>
                    <div class="form-group">
                        <div class="col-md-11">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    @Html.HiddenFor(model => model.Code, new { value = ViewBag.Code })
                    <div class="clear5"></div>
                    <div class="form-group">
                        <div class="col-md-11">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="clear5"></div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input id="btn-login" type="submit" value="Reset" class="btn btn-info btn-block" />
                        </div>
                    </div>


                }




            </div>
        </div>
    </div>
  






